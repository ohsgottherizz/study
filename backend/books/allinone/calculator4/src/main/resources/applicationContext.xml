<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="cAdd" class="ch03pj03.CalAdd"/>
    <bean id="cSub" class="ch03pj03.CalSub"/>
    <bean id="cMul" class="ch03pj03.CalMul"/>
    <bean id="cDiv" class="ch03pj03.CalDiv"/>

    <bean id="myCalculator" class="ch03pj03.MyCalculator"/>

    <bean id="calAssembler" class="ch03pj03.CalAssembler">
        <constructor-arg ref="myCalculator"/>
        <constructor-arg ref="cAdd"/>
        <constructor-arg ref="cSub"/>
        <constructor-arg ref="cMul"/>
        <constructor-arg ref="cDiv"/>
    </bean>
</beans>